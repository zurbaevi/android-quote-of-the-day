<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/quoteFragment">
    <fragment
        android:id="@+id/quoteFragment"
        android:name="dev.zurbaevi.quoteoftheday.ui.view.fragment.QuoteFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_quote">
        <action
            android:id="@+id/action_quoteFragment_to_quoteHistoryFragment"
            app:destination="@id/quoteHistoryFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/quoteHistoryFragment"
        android:name="dev.zurbaevi.quoteoftheday.ui.view.fragment.QuoteHistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_quote_history" />
</navigation>