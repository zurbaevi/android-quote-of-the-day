<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.zurbaevi.presentation.quote.QuoteFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Подавляй желание идти легким путем, забудь о любви и страсти, и твое сердце никогда небудет разбито, но, это ли настоящая жизнь?" />

        <TextView
            android:id="@+id/textViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:text="к/ф «Запретное царство»" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/imageViewRefresh"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_refresh"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageViewHistory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_history"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>